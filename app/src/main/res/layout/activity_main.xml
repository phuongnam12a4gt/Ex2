<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86D8E3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edittieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#0B0C0C"
        android:background="#2196F3"
        android:text="@string/baitapui" />

    <LinearLayout
        android:id="@+id/baitap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_ex1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#4EEA68"
            android:layout_marginBottom="40dp"
            android:text="Ex1" />

        <Button
            android:id="@+id/btn_ex2"
            android:layout_width="200dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"
            android:background="#F44336"
            android:text="Ex2" />

        <Button
            android:id="@+id/btn_linear"
            android:layout_width="200dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:text="uilinearlayout" />

        <Button
            android:id="@+id/btn_relative"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#9C27B0"
            android:text="uirelativelayout" />
    </LinearLayout>
</LinearLayout>